datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  name       String
  username   String   @unique
  email      String   @unique
  phone      String?
  password   String?
  role       String   @default("player")
  metadata   Json?
  createdAt  DateTime @default(now())
  fields     Field[]  @relation("owner_fields")
  complexes  Complex[] @relation("owner_complexes")
  bookings   Booking[]
}

model Complex {
  id        String   @id @default(uuid())
  name      String
  desc      String?
  address   String?
  lat       Float?
  lng       Float?
  fields    Field[]
  metadata  Json?
  createdAt DateTime @default(now())
  ownerId   String?
  owner     User?    @relation("owner_complexes", fields: [ownerId], references: [id])
  @@index([ownerId])
}

model Field {
  id        String   @id @default(uuid())
  ownerId   String?
  owner     User?    @relation("owner_fields", fields: [ownerId], references: [id])
  complexId String
  complex   Complex  @relation(fields: [complexId], references: [id])
  name      String
  desc      String?
  address   String?
  type      String?
  startTime DateTime
  endTime   DateTime
  listOccupiedStartTime DateTime[]
  listOccupiedEndTime DateTime[]
  indoor    Boolean  @default(false)
  lights    Boolean  @default(false)
  metadata  Json?
  createdAt DateTime @default(now())
  bookings  Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  field     Field    @relation(fields: [fieldId], references: [id])
  fieldId   String
  needMatching Boolean @default(false)
  startTime DateTime
  endTime   DateTime
  status    String   @default("pending")
  totalPrice Float   @default(0)
  currency  String   @default("VND")
  teamSize  Int
  metadata  Json?
  version   Int?      @default(1)
  createdAt DateTime @default(now())

  @@index([fieldId, startTime, endTime])
}
