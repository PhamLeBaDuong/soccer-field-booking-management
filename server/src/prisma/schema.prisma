generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  bookings Booking[]
}

model Field {
  id       Int       @id @default(autoincrement())
  name     String
  location String
  price    Float
  size     String
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  field     Field    @relation(fields: [fieldId], references: [id])
  fieldId   Int
  startTime DateTime
  endTime   DateTime
  status    String   @default("pending")
  createdAt DateTime @default(now())
}
